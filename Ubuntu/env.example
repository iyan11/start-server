# .env

# Общие настройки

DB_NAME=database
DB_USER=user
DB_PASSWORD=pass

DOMAIN_OR_IP=mtp-pretest.mgtniip.ru

# Настройки SSH
SSH_PORT=6237

# Настройки PostgreSQL
PG_PORT=5410
POSTGRESQL_VERSION=16

# Настройки PHP
PHP_VERSION=8.3

# Настройки Nginx
NGINX_ROOT=/var/www/html
NGINX_INDEX="index.php index.html index.htm"
NGINX_SERVER_NAME=mtp-pretest.mgtniip.ru
NGINX_CLIENT_MAX_BODY_SIZE=120m
NGINX_SSL_DIR=/opt/ssl
NGINX_SSL_CERTIFICATE=mgtniip.cer
NGINX_SSL_CERTIFICATE_KEY=mgtniip.key
